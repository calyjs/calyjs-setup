{
	"name": "website",
	"root": "apps/website",
	"sourceRoot": "apps/website/src",
	"projectType": "application",
	"namedInputs": {
		"default": [
			"{projectRoot}/**/*",
			"!{projectRoot}/changelog.md"
		]
	},
	"targets": {
		"build": {
			"dependsOn": [
				"clear",
				"write-translations",
				"write-heading-ids",
				"^build"
			],
      "executor": "nx:run-commands",
			"options": {
				"cwd": "apps/website",
				"commands": [
					"docusaurus build"
				],
				"parallel": false
			},
			"inputs": ["default"],
  		"outputs": [
				"{projectRoot}/i18n",
				"{projectRoot}/build"
			],
			"cache": true
		}
	}
}
