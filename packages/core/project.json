{
	"name": "@calyjs-setup/core",
	"root": "packages/core",
	"sourceRoot": "packages/core/src",
	"projectType": "library",
	"targets": {
		"clean": {
      "executor": "nx:run-commands",
			"options": {
				"cwd": "packages/core",
				"commands": [
					"rimraf dist out-tsc coverage test-results"
				],
				"parallel": false
			}
		},
		"build": {
			"dependsOn": ["clean", "^build"],
      "executor": "nx:run-commands",
			"options": {
				"cwd": "packages/core",
				"commands": [
					"build-api",
					"rollup --config"
				],
				"parallel": false
			},
			"inputs": ["production"],
  		"outputs": [
				"{projectRoot}/dist",
				"{projectRoot}/out-tsc"
			],
			"cache": true
		},
		"test": {
			"dependsOn": ["build"],
      "executor": "nx:run-commands",
			"options": {
				"cwd": "packages/core",
				"commands": [
					"jest --coverage"
				],
				"parallel": false
			},
			"inputs": ["default"],
  		"outputs": [
				"{projectRoot}/test-results"
			],
			"cache": true
		},
		"lint": {
			"dependsOn": ["build"],
      "executor": "nx:run-commands",
			"options": {
				"cwd": "packages/core",
				"commands": [
					"eslint --fix"
				],
				"parallel": false
			},
			"inputs": ["default"],
			"cache": true
		},
		"prepack": {
			"dependsOn": ["build"],
      "executor": "nx:run-commands",
			"options": {
				"cwd": "packages/core",
				"commands": [
					"fetch-exports"
				],
				"parallel": false
			}
		}
	}
}
